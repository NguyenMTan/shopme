<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Name shop</title>
    <!-- css -->
    <link rel="stylesheet" href="./css/reset.css" />
    <link rel="stylesheet" href="./css/style.css" />
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
          rel="stylesheet" />

    @RenderSection("css", false)
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="row">
                <a class="logo" asp-controller="Products" asp-action="Index">
                    <img src="./lib/teamspeak.svg"
                         alt=""
                         class="logo-img" />
                    <span>Shop me</span>
                </a>
                <div class="search">
                    <input class="label-search" type="text" />
                    <button>
                        <img src="./lib/magnifying-glass-solid.svg"
                             alt="" />
                    </button>
                </div>
                <div class="account">
                    <a href="" class="login">Đăng nhập</a>
                    <span>/</span>
                    <a href="" class="sign-in">Đăng ký</a>
                </div>
                <button class="action">
                    <img src="./lib/cart-shopping-solid.svg"
                         alt=""
                         class="shopping" />
                    Giỏ hàng
                </button>
            </div>
        </div>
    </header>
    <nav class="navigation">
        <div class="container">
            <div class="navigation-list">
                <div class="items-right">
                    <img src="./lib/list-solid.svg"
                         alt=""
                         class="icon" />
                    <p>Danh mục sản phẩm</p>
                </div>
                <div class="items-left">
                    <div class="item" id="navbarDropdown" role="button">
                        <div class="bg-icon">
                            <img src="./lib/gear-solid.svg"
                                 alt=""
                                 class="icon" />
                        </div>
                        <span>Quản lý</span>
                    </div>
                    <div class="navDropdown" id="dropdownMenu">
                        <ul class="list-menu">
                            <li class="item-menu">
                                <a class="link-menu" asp-controller="Products" asp-action="Index">
                                    <img src="./lib/store-solid.svg"
                                         alt=""
                                         class="icon" />
                                    <span>Sản phẩm</span>
                                </a>
                            </li>
                            <li class="item-menu">
                                <a class="link-menu" asp-controller="Brands" asp-action="Index">
                                    <img src="./lib/flag-solid.svg"
                                         alt=""
                                         class="icon" />
                                    <span>Thương hiệu</span>
                                </a>
                            </li>
                            <li class="item-menu">
                                <a class="link-menu" asp-controller="Customers" asp-action="Index">
                                    <img src="./lib/user-solid.svg"
                                         alt=""
                                         class="icon" />
                                    <span>Khách hàng</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <main>
        @RenderBody()
    </main>
    <footer class="footer">
        <div class="container"></div>
    </footer>
    <script>
        document.getElementById("navbarDropdown").addEventListener("click", function () {
            var dropdownMenu = document.getElementById("dropdownMenu");
            if (dropdownMenu.style.display === "block") {
                dropdownMenu.style.display = "none";
            } else {
                dropdownMenu.style.display = "block";
            }
        });
    </script>
</body>
</html>
